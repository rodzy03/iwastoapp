<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllowAccess"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#d65656"

            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="59.3dp"
                android:src="@drawable/left_circle"
                android:background="#d65656"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:padding="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginLeft="50dp"
                android:background="#d65656"
                />
        </LinearLayout>

        <ImageView
            android:padding="10dp"
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/forgot_pass"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/roundrec_edittext"
        android:padding="15dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="620dp"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/username">
        </ImageView>
        <EditText
            android:maxLines="1"
            android:maxLength="25"
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null"
            android:hint="Email"
            android:id="@+id/email"
            android:fontFamily="@font/poppins"

            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="640dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrec_button"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:backgroundTint="#d65656"
            android:layout_marginTop="50dp"
            android:id="@+id/reset_btn"
            android:layout_marginHorizontal="40dp"
            ></Button>
    </LinearLayout>



</RelativeLayout>