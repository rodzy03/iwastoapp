<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:gravity="center"
        android:padding="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:src="@drawable/trashbin_logo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            />

        <LinearLayout

            android:background="@drawable/roundrec_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout

                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:textAlignment="center"

                    android:fontFamily="@font/poppins"
                    android:text="Full Name"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"

                    android:id="@+id/fullname"
                    android:background="@null"

                    android:fontFamily="@font/poppins"
                    android:hint="First , Middle, Last Name"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout

                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:textAlignment="center"

                    android:fontFamily="@font/poppins"
                    android:text="Major Area"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"

                    android:id="@+id/major_area"
                    android:background="@null"
                    android:inputType="none"
                    android:fontFamily="@font/poppins"
                    android:hint="Quezon City"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout

                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:textAlignment="center"

                    android:fontFamily="@font/poppins"
                    android:text="Barangay"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"

                    android:id="@+id/barangay"
                    android:background="@null"
                    android:inputType="none"
                    android:fontFamily="@font/poppins"
                    android:hint="Bagong Silangan"
                    android:layout_width="match_parent"
                    android:textSize="12dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrec_button"
            android:text="Sign Out"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="0dp"
            android:id="@+id/loginout_btn"
            ></Button>
    </LinearLayout>
</LinearLayout>